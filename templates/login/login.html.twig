{% extends 'base-login-register.html.twig' %}

{% block title %}Login To Movies{% endblock %}

{% block body %}
    <h2 class="text-center pb-4 pt-5">Login</h2>

    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <div class="d-flex flex-column align-items-center">
        <form method="post" class="d-flex flex-column">
            <label for="username" class="pb-2">Email :</label>
            <input class="mb-4" type="text" style="width: 400px; height:32px" id="username" name="_username" value="{{ last_username }}" required />

            <label for="password" class="pb-2">Password :</label>
            <input type="password" style="width: 400px; height:32px" id="password" name="_password" required />

            <p class="pt-3">Don't have an account yet ? <a href="{{ path("app_register") }}">Create an account</a></p>
            <button type="submit" style="width: 70px" class="btn btn-primary mt-3 align-self-end">Login</button>
        </form>
    </div>
{% endblock %}
